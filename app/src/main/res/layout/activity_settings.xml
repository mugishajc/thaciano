<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Back to Home Button -->
    <Button
        android:id="@+id/btnBackHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back to Home"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/primary"
        android:layout_margin="16dp"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:layout_marginBottom="24dp" />

            <!-- Total Number of Counts -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Total Number of Counts"
                android:layout_marginBottom="12dp"
                app:boxStrokeColor="@color/primary"
                app:hintTextColor="@color/primary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etTotalCounts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Start From -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Start From"
                android:layout_marginBottom="12dp"
                app:boxStrokeColor="@color/primary"
                app:hintTextColor="@color/primary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etStartFrom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- End At (Auto-calculated, Read-only) -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="End At (Auto-calculated)"
                android:layout_marginBottom="12dp"
                app:boxStrokeColor="@color/primary"
                app:hintTextColor="@color/primary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etEndAt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:focusable="false"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:background="@android:color/transparent" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Phone Numbers - BIG HEIGHT for thousands of numbers -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone Numbers (comma-separated)"
                android:layout_marginBottom="12dp"
                app:boxStrokeColor="@color/primary"
                app:hintTextColor="@color/primary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPhoneNumbers"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:inputType="textMultiLine"
                    android:minLines="10"
                    android:maxLines="15"
                    android:gravity="top|start"
                    android:scrollbars="vertical" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Import File Button -->
            <Button
                android:id="@+id/btnImportFile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Import from Files (CSV/Excel/Text - Multiple)"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/primary"
                android:textColor="@android:color/white"
                style="@style/Widget.Material3.Button.OutlinedButton" />

            <!-- Save General Settings Button -->
            <Button
                android:id="@+id/btnSaveGeneral"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save General Settings"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="32dp" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/primary"
                android:layout_marginBottom="24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Security Configuration"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:layout_marginBottom="16dp" />

            <!-- PIN Field (numbers only) -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter PIN"
                android:layout_marginBottom="16dp"
                app:boxStrokeColor="@color/primary"
                app:hintTextColor="@color/primary"
                app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberPassword" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Short Code Field -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Short Code (e.g., *348#)"
                android:layout_marginBottom="16dp"
                app:boxStrokeColor="@color/primary"
                app:hintTextColor="@color/primary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etShortCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Short code format: *XXX# (PIN will be inserted automatically)"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginBottom="24dp" />

            <!-- Save Security Button -->
            <Button
                android:id="@+id/btnSaveSecurity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save Security Settings"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
